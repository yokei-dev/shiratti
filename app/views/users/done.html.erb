<div class="container">
  <div class="mt-3">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><%= link_to "ToDo", "/users/#{current_user.id}/todo", class: 'nav-link btn-secondary', data: {"turbolinks"=>false}%></li>
      <li class="nav-item"><%= link_to "Doing", "/users/#{current_user.id}/doing", class: 'nav-link btn-secondary', data: {"turbolinks"=>false}%></li>
      <li class="nav-item"><%= link_to "Done", "/users/#{current_user.id}/done", class: 'nav-link active', data: {"turbolinks"=>false}%></li>
    </ul>
  </div>

  <% @tasks.each do |task| %>
    <div class="task">
      <ul>
        <li><%= task.project.name %>：<%= task.content %></li>
        <ul>
          <li>締め切り日：<%= task.deadline %></li>
          <li>完了日：<%= task.updated_at.strftime('%Y-%m-%d') %></li>
        </ul>
      </ul>
    </div>
  <% end %>
</div>