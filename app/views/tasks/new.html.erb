<div class="main">
  <div class="">
    <div class="form-wrap">
      <div class="form-group text-center">
      </div>
      <%= form_with model: @task do |f| %>
        <div class="form-group">
          <%= f.label :content %>
        </div>
        <div class="form-group">
          <%= f.text_field :content %>
        </div>
        <div class="form-group">
          <%= f.label :deadline %>
        </div>
        <div class="form-group">
          <%= f.text_field :deadline %>
        </div>
        <div class="actions">
          <%= f.submit "投稿", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>