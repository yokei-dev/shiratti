<div class="main">
  <div class="">
    <div class="form-wrap">
      <div class="form-group text-center">
      </div>
      <%= form_with model: @task do |f| %>
        <div class="form-group">
          <%= f.label :content , 'タスク'%>
          <%= f.text_field :content %>
        </div>
        <div class="form-group">
          <%= f.label :deadline , '〆切'%>
          <%= f.date_field :deadline %>
        </div>
        <div class="form-group">
          <%= f.label :project_id , 'プロジェクト'%>
          <%= f.collection_select :project_id, Project.all, :id, :name, include_blank: '選択して下さい' %>
        </div>
        <div class="actions">
          <%= f.submit "投稿", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>