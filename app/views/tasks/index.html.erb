<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.content %></li>
    <div>〆切：<%= task.deadline %></div>
    <%= form_with(model: task.daily_tasks.build, local: true)do |f| %>
      <%= f.hidden_field :task_id, :value => task.id %>
      <%= f.submit 'Doing', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
</ul>