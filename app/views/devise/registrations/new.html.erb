<div class="main container mt-3">
  <div class=" devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h2 class="logo-img mx-auto"></h2>
        <h2 class="text">ユーザー登録</h2>
      </div>
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <% if resource.errors.any? %>
          <div id="error_explanation alert alert-warning">
            <ul>
              <% resource.errors.full_messages.each do |r| %>
                <li><%= r %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "必須：メールアドレス", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_field :name, autofocus: true, placeholder: "必須：フルネーム", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_field :slackid, autofocus: true, placeholder: "SlackID", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: '必須：大文字、小文字、数字、記号を含む8文字以上', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "必須：パスワードの確認", class: "form-control" %>
        </div>

        <div class="actions row">
          <%= f.submit "登録する", class: "btn btn-primary w-50 offset-md-3" %>
        </div>
      <% end %>

      <br>

      <p>↓既にアカウントを持っている方</p>
      <p class="devise-link">
        <%= link_to "ログインする", new_user_session_path, class: 'btn btn-success' %>
      </p>
    </div>
  </div>
</div>