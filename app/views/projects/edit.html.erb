<%= form_with(model: @project, local: true) do |f| %>
  <div class='container'>
    <div class='form-group row mt-3'>
      <%= f.label :name, 'プロジェクト名' %>
      <%= f.text_field :name, class: 'form-control ' %>
    </div>
    <div class='form-group row'>
      <%= f.label :boss_id, 'プロジェクトマネージャー' %>
      <%= f.collection_select :boss_id, User.all, :id, :name, include_blank: '選択して下さい', class: 'form-control' %>
    </div>
    <div class='form-group row'>
      <%= f.submit '登録', class: 'btn btn-primary' %>
      <%= link_to '削除', @project, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>