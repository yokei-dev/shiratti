<div class='container'>
  <div class="row mt-3">
    <h2 class=""> <%= 'プロジェクト作成しよう' %> </h2>
  </div>

  <%= form_with(model: @project, local: true) do |f| %>
      <% if @project.errors.any? %>
        <div id="error_explanation alert alert-warning">
          <ul>
            <% @project.errors.full_messages.each do |pjt| %>
              <li><%= pjt %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class='project'>
        <div class=' form-group row mt-3'>
          <%= f.label :name, 'プロジェクト名（必須）', class: 'ml-2' %>
          <%= f.text_field :name, class: 'form-control ml-2', placeholder:'プロジェクト名' %>
        </div>
        <div class=' form-group row'>
          <%= f.label :boss_id, 'プロジェクトマネージャー（必須）', class: 'ml-2' %>
          <%= f.collection_select :boss_id, User.all, :id, :name, include_blank: '選択して下さい', class: 'form-control ml-2' %>
        </div>
        <div class=' form-group row mt-3'>
          <%= f.label :channel, 'SlackのチャンネルやDMのURL（任意）', class: 'ml-2' %>
          <%= f.text_field :channel, :placeholder => "https://xxxx.slack.com/archives/xxxxxx", class: 'form-control ml-2' %>
        </div>
        <div class=' form-group row'>
          <%= f.submit '登録', class: 'btn btn-primary ml-2' %>
        </div>
      </div>
  <% end %>
</div>